<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons style -->
    <style name="Widget.Parrot.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="cornerRadius">@dimen/keyline_4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingTop">@dimen/keyline_1</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
    </style>
    <style name="Widget.Parrot.TextButton.Primary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Parrot.TextButton.Primary</item>
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="cornerRadius">@dimen/keyline_4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingTop">@dimen/keyline_1</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
    </style>
    <style name="Widget.Parrot.OutlinedButton.Primary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Parrot.OutlinedButton.Primary</item>
        <item name="strokeWidth">@dimen/keyline_1</item>
        <item name="strokeColor">@color/primary</item>
        <item name="backgroundTint">@color/invisible</item>
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="cornerRadius">@dimen/keyline_4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingTop">@dimen/keyline_1</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
    </style>
    <!-- CircularProgressIndicator style -->
    <style name="Widget.Parrot.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorInset">0dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="trackThickness">4dp</item>
    </style>
    <!-- TextInputLayout style -->
    <style name="Widget.Parrot.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_outlined_stoke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">#B9B9B9</item>
        <item name="passwordToggleTint">@color/input_toggle_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
    </style>
    <!-- Buttons theme overlay -->
    <style name="ThemeOverlay.Parrot.Button.PrimaryVariant" parent="Theme.Parrot">
        <item name="colorPrimary">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/primary_variant</item>
    </style>
    <style name="ThemeOverlay.Parrot.TextButton.Primary" parent="Theme.Parrot">
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="ThemeOverlay.Parrot.OutlinedButton.Primary" parent="Theme.Parrot">
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>