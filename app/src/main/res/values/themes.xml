<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Parrot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Other colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorError">@color/error</item>
        <!-- System bars colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/navigation_bar</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Parrot.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Parrot.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Parrot.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Parrot.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Parrot.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Parrot.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Parrot.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Parrot.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Parrot.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Parrot.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Parrot.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Parrot.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Parrot.Overline</item>
        <!--Component styles-->
        <item name="materialButtonStyle">@style/Widget.Parrot.Button.Primary</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Parrot.OutlinedButton.Primary</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.Parrot.CircularProgressIndicator</item>
    </style>
    <!-- Splash Theme-->
    <style name="Theme.Parrot.Splash" parent="Theme.Parrot">
        <!-- System bars colors -->
        <item name="android:statusBarColor">@color/invisible</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor">@color/invisible</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>